@model PerfV400.Models.UserProfile

@{
    ViewBag.Title = "Edit UserProfile";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("EditUserProfile", "Account", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnFailure = "searchFailed",
        OnSuccess = "updateSuccess",
        UpdateTargetId = string.Format("UserProfileDetails{0}", Model.UserId)
    },
    new { @id = "EditForm" }

    
    )) 

{   
    
    @Html.ValidationSummary(true)

    <div id="update-message" class="error invisible"></div>
    
    <fieldset>
        <legend>UserProfile</legend>

        @Html.HiddenFor(model => model.UserId)

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.UserFirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserFirstName)
            @Html.ValidationMessageFor(model => model.UserFirstName)
        </div>

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.UserMiddleNames)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserMiddleNames)
            @Html.ValidationMessageFor(model => model.UserMiddleNames)
        </div>

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.UserLastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserLastName)
            @Html.ValidationMessageFor(model => model.UserLastName)
        </div>

     
    </fieldset>
}


