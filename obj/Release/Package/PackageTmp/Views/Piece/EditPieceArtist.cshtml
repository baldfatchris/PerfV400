@model PerfV400.Models.PieceArtist

@{
    ViewBag.Title = "Edit Piece Artist";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("EditPieceArtist", "Piece", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnFailure = "searchFailed",
        OnSuccess = "updateSuccess",
        UpdateTargetId = string.Format("PieceArtistDetails{0}", Model.PieceArtist_Id)
    },
    new { @id = "EditForm" }

    
    )) 

{   
    
    @Html.ValidationSummary(true)

    <div id="update-message" class="error invisible"></div>
    
    <fieldset>
        <legend>Piece</legend>

        @Html.HiddenFor(model => model.PieceArtist_Id)
        @Html.HiddenFor(model => model.PieceArtist_PieceId)
        @Html.HiddenFor(model => model.PieceArtist_ArtistId)

        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.PieceArtist_PieceArtistTypeId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("PieceArtist_PieceArtistTypeId", String.Empty)
                @Html.ValidationMessageFor(model => model.PieceArtist_PieceArtistTypeId)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.PieceArtist_Comments)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.PieceArtist_Comments)
                @Html.ValidationMessageFor(model => model.PieceArtist_Comments)
            </div>
        </div>

        
    </fieldset>
}


