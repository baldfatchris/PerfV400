@{    
    int counter;

    IEnumerable<PerfV400.Models.Event> events = ViewBag.events;
    if (events.Count() > 0)
    {
<h2>Events</h2>
<div class="stuff">
    @{
        counter = 0;
    }
    @foreach (PerfV400.Models.Event item in ViewBag.events)
    {
        if (counter < 5)
        {
            counter = counter + 1;

            <div class="Photo150">
                <div class="PhotoImage">
                    <a href="@Url.Action("Details", "Event", new { id = item.Event_Id }, null)">
                        <img class="thumb" width="150" src="@Url.Action("GetEventImage", "Event", new { id = item.Event_Id })" alt="" border="0" style="border:0"/>
                    </a>
                </div>
                <div class="UserStatus">
                </div>
                <div class="PhotoCaption">
                    <div class="PhotoCaptionText">
                        <a href="@Url.Action("Details", "Event", new { id = item.Event_Id }, null)">
                            <strong>@Html.DisplayFor(modelItem => item.Event_Name)</strong> - 
                            @(item.Event_Date.ToLongDateString()) - 
                            @Html.DisplayFor(modelItem => item.Venue.Venue_Name) - 
                            @Html.DisplayFor(modelItem => item.Venue.Venue_City)
                        </a>
                    </div>
                </div>
            </div>           
        
        }
        else
        {
            <div>More Events...</div>
        }
    }
</div>        
        
    }



    IEnumerable<PerfV400.Models.Artist> artists = ViewBag.artists;
    if (artists.Count() > 0)
    {
<h2>Artists</h2>
<div class="stuff">
    @foreach (PerfV400.Models.Artist item in ViewBag.artists)
    {
    <div class="Photo150">
        <div class="PhotoImage">
            @if (item.Artist_Photo != null)
            {
                <a href="@Url.Action("Details", "Artist", new { id = item.Artist_Id }, null)">
                    <img  class="thumb" width="150" src="@Url.Action("GetArtistImage", "Artist", new { id = item.Artist_Id })" alt="" border="0" style="border:0"/>
                </a>
    
            }
        </div>
        <div class="UserStatus">
        </div>
        <div class="PhotoCaption">
            <div class="PhotoCaptionText">
                <a href="@Url.Action("Details", "Artist", new { id = item.Artist_Id }, null)">
                    <strong>@Html.DisplayFor(modelItem => item.Artist_FirstName) @Html.DisplayFor(modelItem => item.Artist_LastName)</strong> - 
                    @Html.DisplayFor(modelItem => item.Type.Type_Name) 
                </a>
            </div>
        </div>
    </div>           
    }
</div>

    }

    IEnumerable<PerfV400.Models.Venue> venues = ViewBag.venues;
    if (venues.Count() > 0)
    {
<h2>Venues</h2>
<div class="stuff">
    @foreach (PerfV400.Models.Venue item in venues)
    {
    <div class="Photo150">
        <div class="PhotoImage">
            @if (item.Venue_Photo != null)
            {
                <a href="@Url.Action("Details", "Venue", new { id = item.Venue_Id }, null)">
                    <img  class="thumb" width="150" src="@Url.Action("GetVenueImage", "Venue", new { id = item.Venue_Id })" alt="@Html.DisplayFor(modelItem => item.Venue_Name)" border="0" style="border:0"/>
                </a>
    
            }
        </div>
        <div class="UserStatus">
        </div>
        <div class="PhotoCaption">
            <div class="PhotoCaptionText">
                <a href="@Url.Action("Details", "Venue", new { id = item.Venue_Id }, null)">
                    <strong>@Html.DisplayFor(modelItem => item.Venue_Name)</strong> - 
                    @Html.DisplayFor(modelItem => item.Venue_City) -
                    @Html.DisplayFor(modelItem => item.CountryRegion.CountryRegion_Name)
                </a>
            </div>
        </div> 
    </div>          
    }
</div>

    }
    IEnumerable<PerfV400.Models.Piece> pieces = ViewBag.pieces;
    if (pieces.Count() > 0)
    {
<h2>Pieces</h2>
<div class="stuff">
    @foreach (PerfV400.Models.Piece item in pieces)
    {
    <div class="Photo150">
        <div class="PhotoImage">
            <a href="@Url.Action("Details", "Piece", new { id = item.Piece_Id }, null)">
                <img  class="thumb" width="150" src="@Url.Action("GetPieceImage", "Piece", new { id = item.Piece_Id })" alt="" border="0" style="border:0"/>
            </a>    
        </div>
        <div class="UserStatus">
        </div>
        <div class="PhotoCaption">
            <div class="PhotoCaptionText">
                <a href="@Url.Action("Details", "Piece", new { id = item.Piece_Id }, null)">
                    <strong>@Html.DisplayFor(modelItem => item.Piece_Name)</strong> 
                </a>
            </div>
        </div>
    </div>          
    }
</div>

    }       
}







<script type="text/javascript">
    $(function () { $('.thumb').mouseover(function () { $(this).animate({ height: '+=4', width: '+=4' }).animate({ height: '-=4', width: '-=4' }); }); });
</script>
