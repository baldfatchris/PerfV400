@model PerfV400.Models.PerformanceArtist

@{
    string artistFullName;
    if (Model.Artist == null)
    {
        artistFullName = string.Format("{0} {1}", ViewBag.artist.Artist_FirstName, ViewBag.artist.Artist_LastName);
    }
    else
    {
        artistFullName = string.Format("{0} {1}", Model.Artist.Artist_FirstName, Model.Artist.Artist_LastName);
    }

    string roleName;
    if (Model.Role == null)
    {
        roleName = ViewBag.role.Role_Name;
    }
    else
    {
        roleName = Model.Role.Role_Name;
    }     
}

    <div class="PhotoImage">
        <a href="@Url.Action("Details", "Artist", new { id = Model.Artist.Artist_Id }, null)">
            <img  class="thumb" width="150" src="@Url.Action("GetArtistImage", "Artist", new { id = Model.Artist.Artist_Id })" alt="" border="0" style="border:0"/>
        </a>    
    </div>

    <div class="UserStatus">
    </div>
    <div class="PhotoCaption">
        <div class="PhotoCaptionText">
            <a href="@Url.Action("Details", "Role", new { id = Model.PerformanceArtist_RoleId }, null)">
                <strong>@roleName</strong>
            </a>
            -
            <a href="@Url.Action("Details", "Artist", new { id = Model.PerformanceArtist_ArtistId }, null)">
                @artistFullName
            </a>
        </div>
    </div>

