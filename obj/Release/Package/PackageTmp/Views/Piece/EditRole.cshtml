@model PerfV400.Models.Role

@{
    ViewBag.Title = "Edit Role";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("EditRole", "Piece", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnFailure = "searchFailed",
        OnSuccess = "updateSuccess",
        UpdateTargetId = string.Format("RoleDetails{0}", Model.Role_Id)
    },
    new { @id = "EditForm" }

    
    )) 

{   
    
    @Html.ValidationSummary(true)

    <div id="update-message" class="error invisible"></div>
    
    <fieldset>
        <legend>Piece</legend>

        @Html.HiddenFor(model => model.Role_Id)
        @Html.HiddenFor(model => model.Role_PieceId)

       <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Role_Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Role_Name)
                @Html.ValidationMessageFor(model => model.Role_Name)
            </div>
        </div>

        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Role_TypeId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Role_TypeId", String.Empty)
                @Html.ValidationMessageFor(model => model.Role_TypeId)
            </div>
        </div>

       <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Role_Rank)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Role_Rank)
                @Html.ValidationMessageFor(model => model.Role_Rank)
            </div>
        </div>

        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Role_Notes)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Role_Notes)
                @Html.ValidationMessageFor(model => model.Role_Notes)
            </div>
        </div>

        
    </fieldset>
}


