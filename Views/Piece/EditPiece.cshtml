@model PerfV400.Models.Piece

@{
    ViewBag.Title = "Edit Piece";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("EditPiece", "Piece", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnFailure = "searchFailed",
        OnSuccess = "updateSuccess",
        UpdateTargetId = string.Format("PieceDetails{0}", Model.Piece_Id)
    },
    new { @id = "EditForm" }

    
    )) 

{   
    
    @Html.ValidationSummary(true)

    <div id="update-message" class="error invisible"></div>
    
    <fieldset>
        <legend>Piece</legend>

        @Html.HiddenFor(model => model.Piece_Id)
        @Html.HiddenFor(model => model.Piece_Photo)
        @Html.HiddenFor(model => model.Piece_PhotoFileName)
        @Html.HiddenFor(model => model.Piece_PhotoMimeType)

        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Piece_Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Piece_Name, new { style = "width:40em" }) 
                @Html.ValidationMessageFor(model => model.Piece_Name)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Piece_GenreId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Piece_GenreId", String.Empty)
                @Html.ValidationMessageFor(model => model.Piece_GenreId)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Piece_Year)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Piece_Year)
                @Html.ValidationMessageFor(model => model.Piece_Year)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Piece_Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Piece_Description)
                @Html.ValidationMessageFor(model => model.Piece_Description)
            </div>
        </div>

        <div>
            <div class="editor-label">
                @Html.DisplayNameFor(model => model.Piece_Wiki)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Piece_Wiki)
                @Html.ValidationMessageFor(model => model.Piece_Wiki)
            </div>
        </div>
        
    </fieldset>
}


